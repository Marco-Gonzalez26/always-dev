---
import { Image } from 'astro:assets'
import Me from '../images/me.jpg'

const { text_1, text_2 } = Astro.props
---

<article
  class='flex gap-4 items-center justify-center flex-col-reverse md:flex-row md:items-start'>
  <div class='flex flex-col gap-4'>
    <p class='opacity-75 text-lg' set:html={text_1} />

    <p class='opacity-75 text-lg' set:html={text_2} />
  </div>

  <Image
    alt="Marco's photo"
    src={Me}
    class='rounded-full object-cover w-48 aspect-square'
  />
</article>
